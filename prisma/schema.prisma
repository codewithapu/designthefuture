generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id            Int    @id @default(autoincrement())
  name          String
  email         String
  contactNumber String
}

model Ticket {
  id            Int       @id @default(autoincrement())
  eventId       Int
  userId        Int
  paymentId     Int?
  paymentStatus String?
  paymentDate   DateTime?
}

model Payment {
  id            Int      @id @default(autoincrement())
  ticketId      Int      @unique
  amount        Decimal
  paymentStatus String
  paymentDate   DateTime @default(now())
}
